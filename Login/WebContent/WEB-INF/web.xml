<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Login</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.login.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/remote/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CheckLoginServlet</servlet-name>
    <servlet-class>com.login.CheckLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckLoginServlet</servlet-name>
    <url-pattern>/remote/check</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SaveOnDbServlet</servlet-name>
    <servlet-class>com.login.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveOnDbServlet</servlet-name>
    <url-pattern>/remote/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SaveServlet</servlet-name>
    <servlet-class>com.login.SaveEventServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveServlet</servlet-name>
    <url-pattern>/remote/save</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.login.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/remote/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CalendarServlet</servlet-name>
    <servlet-class>com.login.AuthorizeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalendarServlet</servlet-name>
    <url-pattern>/remote/calendar</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Calendar2StepServlet</servlet-name>
    <servlet-class>com.login.SaveOnCalendarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Calendar2StepServlet</servlet-name>
    <url-pattern>/remote/calendar2step</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/SdcsDb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>